<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dorsa.psb.com.dorsa">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".launcher"
            android:clearTaskOnLaunch="true"
            android:label="@string/launcher"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor"
            android:stateNotNeeded="true"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateUnspecified|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Parent"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Launcher_Kid"
            android:label="@string/launcher"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_pattern" />
        <activity android:name=".Activity_Intro" />
        <activity android:name=".Activity_Get_Password" />
        <activity android:name=".Activity_GetPattern" />
        <activity android:name=".Activity_Add_Child" />
        <activity android:name=".Activity_Parent_Settings" />
        <activity
            android:name=".Activity_Select_Background"
            android:theme="@style/Theme.AppCompat.Translucent" />

        <receiver
            android:name=".service.Broadcast_WatchDog"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".service.Service_StatusBar"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".service.Close_RecentApps"
            android:enabled="true"
            android:exported="true"></activity>

        <service
            android:name=".service.Service_Launcher"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>
