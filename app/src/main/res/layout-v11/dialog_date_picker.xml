<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="310dp"
    android:background="@drawable/bgr_round_dialog"
    android:padding="5dp">

    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_pick_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="تاریخ تولد"
        android:textColor="#fff"
        android:textSize="14sp" />
   

    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_pick_date_title_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dialog_pick_date_year_picker"
        android:layout_alignRight="@+id/dialog_pick_date_year_picker"
        android:layout_below="@+id/dialog_pick_date_title"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="سال"
        android:textColor="#000"
        android:textSize="14sp"

        />

    <ir.dorsa.dorsaworld.other.cNumberPicker
        android:id="@+id/dialog_pick_date_year_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_pick_date_title_year" 
        android:layout_marginLeft="25dp"
        />

    <ir.dorsa.dorsaworld.other.CTextView
    android:id="@+id/dialog_pick_date_title_month"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/dialog_pick_date_month_picker"
    android:layout_alignRight="@+id/dialog_pick_date_month_picker"
    android:layout_below="@+id/dialog_pick_date_title"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="ماه"
    android:textColor="#000"
    android:textSize="14sp" />

    <ir.dorsa.dorsaworld.other.cNumberPicker
        android:id="@+id/dialog_pick_date_month_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pick_date_title_month"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/dialog_pick_date_year_picker"
        />

    <!--day-->
    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_pick_date_title_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dialog_pick_date_day_picker"
        android:layout_alignRight="@+id/dialog_pick_date_day_picker"
        android:layout_below="@+id/dialog_pick_date_title"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="روز"
        android:textColor="#000"
        android:textSize="14sp" />

    <ir.dorsa.dorsaworld.other.cNumberPicker
        android:id="@+id/dialog_pick_date_day_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pick_date_title_day"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/dialog_pick_date_month_picker"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <ir.dorsa.dorsaworld.other.cButton
            android:id="@+id/dialog_pick_date_cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.98"
            android:background="@drawable/light_overlay"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="بازگشت"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#fff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
        <ir.dorsa.dorsaworld.other.cButton
            android:id="@+id/dialog_pick_date_month_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.98"
            android:background="@drawable/light_overlay"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="تایید"
            />


    </LinearLayout>
    
</RelativeLayout>
