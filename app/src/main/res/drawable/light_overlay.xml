<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="false" 
    android:dither="true" 
    android:tileMode="repeat">

    <!-- Non focused states -->
	<item android:state_enabled="true" android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable= "@drawable/transparetn_light" />
   
      
	<!-- Focused states -->
	
	<item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/transparetn_light" />

	<!-- Pressed -->
	<item android:state_pressed="true" android:drawable="@drawable/transparetn_light" />
 
</selector> 