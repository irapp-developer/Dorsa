<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bgr_round_dialog"
    android:padding="5dp"
    >

    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_crash_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textColor="#fff"
        android:textSize="14sp"
        android:text="بروز خطا"
        />
    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_crash_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_crash_top_title"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="@string/crash"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dialog_crash_desc"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <ir.dorsa.dorsaworld.other.cButton
            android:id="@+id/dialog_crash_btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_yellow"
            android:layout_below="@+id/dialog_crash_desc"
            android:layout_margin="5dp"
            android:textColor="@color/ButtonText"
            android:textSize="12sp"
            android:text="بستن"
            />
        <ir.dorsa.dorsaworld.other.cButton
            android:id="@+id/dialog_crash_btn_send_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_yellow"
            android:layout_margin="5dp"
            android:layout_below="@+id/dialog_crash_desc"
            android:textColor="@color/ButtonText"
            android:textSize="12sp"
            android:text="ارسال مشکل"
            />
    </LinearLayout>
    

  
</RelativeLayout>
