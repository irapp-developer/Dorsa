            android:visibility="invisible"
            />
    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/frg_kid_img_boy_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_boy_2"
            />
        <ImageView
            android:id="@+id/frg_kid_img_boy_3_stroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stroke_orange"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/frg_kid_img_boy_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_boy_3"
            />
        <ImageView
            android:id="@+id/frg_kid_img_boy_4_stroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/stroke_orange"
            android:visibility="invisible"
            />
