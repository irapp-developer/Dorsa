<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_ask_select_app_main_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/bgr_blue"
    >

    <View
        android:id="@+id/dialog_ask_select_app_btn_yes1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialog_ask_select_app_topbgr"/>
 
    <View
        android:id="@+id/dialog_ask_select_app_topbgr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"/>

    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_select_app_dorsa_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_ask_select_app_topbgr"
        android:gravity="right"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:text="برنامه های پیشنهادی درسا بازار"
        android:visibility="gone"
        />
    
    <RelativeLayout
        android:id="@+id/dialog_select_app_dorsa_recView_lay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/dialog_select_app_dorsa_text_title"
        android:visibility="gone"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_select_app_dorsa_recView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    </RelativeLayout>
    <View
        android:id="@+id/dialog_select_app_line_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/dialog_select_app_dorsa_recView_lay"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        />
    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_select_app_device_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_select_app_line_1"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="انتخاب برنامه های دستگاه شما"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_select_app_recView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/dialog_select_app_device_text_title"
        android:minHeight="200dp" />

    <ImageView
        android:id="@+id/dialog_ask_btn_submit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_right"
        android:paddingRight="10dp"
        android:layout_above="@+id/dialog_select_app_device_text_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>
    
    
    
    

