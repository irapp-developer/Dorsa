<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_centerInParent="true"
         android:id="@+id/dialog_ask_download_btn_no1"
     >
       <View 
         android:id="@+id/dialog_ask_download_btn_yes1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/dialog_ask_download_topbgr"
    android:background="#ffffff"
    android:layout_above="@+id/dialog_ask_download_btn_linear"
         />
     <View 
         android:id="@+id/dialog_ask_download_topbgr"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentTop="true"
    android:background="@color/colorPrimary"
         />
    
      <ir.dorsa.dorsaworld.other.CTextView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_alignTop="@+id/dialog_ask_download_topbgr"
	android:layout_alignLeft="@+id/dialog_ask_download_topbgr"
	android:layout_alignRight="@+id/dialog_ask_download_topbgr"
	android:layout_alignBottom="@+id/dialog_ask_download_topbgr"       
	android:gravity="center"
	android:layout_marginRight="5dp"
	android:layout_marginTop="7.5dp"
	android:layout_marginBottom="7.5dp"
	android:textColor="#fff"
          android:textSize="12sp"
          android:text="نام برنامه"
          
         />
     <ir.dorsa.dorsaworld.other.cEditText
    android:id="@+id/dialog_ask_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/dialog_ask_download_topbgr"
    android:layout_above="@+id/dialog_ask_download_btn_linear"
    
    	android:textSize="15sp"
         android:textColor="@color/colorPrimary"
         android:gravity="center_vertical|center_horizontal"
         
         
         />
     
   <LinearLayout 
         android:id="@+id/dialog_ask_download_btn_linear"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:weightSum="2"
    >
       <ir.dorsa.dorsaworld.other.cButton 
         android:id="@+id/dialog_ask_btn_no"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:textColor="#ffffff"
    android:text="خیر"
    android:layout_weight=".99"
    android:background="@drawable/button_blue"
           />
       <View 
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="0.02"
    android:background="#ffffff"
           />
       <ir.dorsa.dorsaworld.other.cButton 
         android:id="@+id/dialog_ask_btn_yes"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:textColor="#ffffff"
    android:text="بله"
    android:layout_weight=".99"
    android:background="@drawable/button_blue"
           />
   </LinearLayout>
        
        
    </RelativeLayout>
    
    
    
    

