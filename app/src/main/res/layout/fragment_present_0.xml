<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/frg_present_scrShot_img"
        android:layout_marginBottom="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_toRightOf="@+id/frg_present_scrShot_img"
        android:src="@drawable/present_p_shot_1_3"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/frg_present_scrShot_img"
        android:layout_marginTop="-150dp"
        android:layout_marginRight="-80dp"
        android:layout_toLeftOf="@+id/frg_present_scrShot_img"
        android:src="@drawable/present_p_shot_1_2"
        />
    <ImageView
        android:id="@+id/frg_present_scrShot_img"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/present_p_shot_1_1"
        android:layout_above="@+id/frg_present_img_text"
        />
    
    <ImageView
        android:id="@+id/frg_present_img_text"
        android:layout_width="match_parent"
        android:layout_height="100dp" 
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/present_p_0"
        />
   
</RelativeLayout>
