<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ir.dorsa.dorsaworld.MainActivity"
    android:background="@drawable/bgr_default"
    >
    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/frg_set_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="کنترل برنامه ها"
        />
    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/frg_set_task_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frg_set_task_title"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="@string/select_task"
        />
   
    <ir.dorsa.dorsaworld.other.cButton
        android:id="@+id/frg_set_task_accept"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/frg_set_task_desc"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_yellow"
        android:textColor="#006064"
        android:textSize="12sp"
        android:text="فعال سازی"
        />
    
    
   
    
    
</RelativeLayout>
