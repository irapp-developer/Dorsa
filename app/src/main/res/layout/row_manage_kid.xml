<?xml version="1.0" encoding="utf-8"?>
<dorsa.psb.com.dorsa.other.squareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    
    >
    
    <ImageView
        android:id="@+id/row_kid_avetar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_above="@+id/row_kid_name"
        android:src="@drawable/icon_boy_1"
        />
    <ImageView
        android:id="@+id/row_kid_avetar_stroke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stroke_orange"
        android:layout_above="@+id/row_kid_name"
        android:visibility="invisible"
        />
    
    <dorsa.psb.com.dorsa.other.CTextView
        android:id="@+id/row_kid_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:text="نام کودک"
        />
    

</dorsa.psb.com.dorsa.other.squareRelativeLayout>
