<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_edit_kid_top_bgr"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/bgr_blue" />

    <ImageView
        android:id="@+id/dialog_edit_kid_mushak"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mushak_kaghazi" />

    <ImageView
        android:id="@+id/dialog_edit_kid_clods"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/clouds_boy" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/dialog_edit_kid_view_bottom"
        android:layout_below="@+id/dialog_edit_kid_top_bgr"
        android:background="#ffffff" />

    <ImageView
        android:id="@+id/dialog_edit_kid_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/dialog_edit_kid_top_bgr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_edit_kid_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_edit_kid_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="نام برنامه"
        android:textColor="#383838"
        android:textSize="14sp" />

    <View
        android:id="@+id/dialog_edit_kid_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dialog_edit_kid_descr"
        android:layout_marginTop="5dp"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/dialog_edit_kid_btn_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dialog_edit_kid_descr"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3">

        <ir.dorsa.dorsaworld.other.CTextView
            android:id="@+id/dialog_edit_kid_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="قطع دسترسی به اینترنت"
            android:textColor="#a6a6a6" />

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.01"
            android:background="#a6a6a6" />

        <ir.dorsa.dorsaworld.other.CTextView
            android:id="@+id/dialog_edit_kid_btn_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="حذف"
            android:textColor="#a6a6a6" />
    </LinearLayout>

    <ir.dorsa.dorsaworld.other.CTextView
        android:id="@+id/dialog_edit_kid_single_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/dialog_edit_kid_descr"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="حذف"
        android:textColor="#a6a6a6"
        android:visibility="gone" />

</RelativeLayout>   